if ((pid = fork()) < 0 ) {
           /* Fork system call failed */
           .
           .
           .
           perror("fork"), exit(1);
}else if (pid == 0) {
           /* Child only, pid is 0 */
          .
           .
           .
           return 0;
}else {
           /* Parent only , pid is child's process ID */
           .
           .
           .
}
