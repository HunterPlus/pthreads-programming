#include <errno.h>
#include <stdio.h>
.
.
.
if (rtn = pthread_create(...)) {
	/* error has occurred */
    	fprintf(stderr,"Error: pthread_create, ");
    	if (rtn == EAGAIN)
       		fprintf(stderr,"Insufficent resources\n");
       	else if (rtn == EINVAL)
               	fprintf(stderr, "Invalid arguments\n");
    	exit(1);
}
/* no error */
.
.
.
