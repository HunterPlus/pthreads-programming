void *producer()
{
    	.
    	.
    	.
  	lock shared buffer
  	place results in buffer
  	unlock buffer
  	wake up any consumer threads
    	.
    	.
   	.
}

void *consumer()
{
    	.
    	.
    	.
  	lock shared buffer
  	while state is not full {
        	release lock and sleep
        	awake and reacquire lock
        }
  	remove contents
  	unlock buffer
    	.
    	.
    	.
}
